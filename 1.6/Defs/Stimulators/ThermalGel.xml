<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ABF_Thing_Synstruct_StimulatorBase">
		<defName>ABF_Thing_Synstruct_ThermalPill</defName>
		<label>thermal gel</label>
		<description>A synthetic chemical compound designed to reduce chassis susceptibility to adverse temperature - on both extremes. The thick, viscous gel can also serve as a sealant against vacuum, should the synstruct need to use it as such.</description>
		<graphicData>
			<texPath>Things/Drugs/TemperatureStabilizer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>4</MarketValue>
			<WorkToMake>550</WorkToMake>
		</statBases>
		<costList>
			<Chemfuel>15</Chemfuel>
		</costList>
		<comps>
			<li Class="ArtificialBeings.CompProperties_SynstructStimulator">
				<hediffToApply>ABF_Hediff_Synstruct_ThermalPill</hediffToApply>
			</li>
		</comps>
	</ThingDef>

	<HediffDef>
		<defName>ABF_Hediff_Synstruct_ThermalPill</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>thermal gel</label>
		<description>Synthetic chemical compounds designed to reduce chassis susceptibility to vacuum and to the adverse conditions of both temperature extremes are flowing through the chassis.</description>
		<defaultLabelColor>(0.8,0.8,0.8)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>5.0</maxSeverity>
        <isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.25</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<label>insignificant</label>
				<becomeVisible>false</becomeVisible>
			</li>

			<li>
				<minSeverity>0.02</minSeverity>
				<label>minor</label>
				<statOffsets>
                    <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.94</VacuumResistance>
					<ComfyTemperatureMin>-30</ComfyTemperatureMin>
					<ComfyTemperatureMax>25</ComfyTemperatureMax>
				</statOffsets>
			</li>

			<li>
				<minSeverity>0.25</minSeverity>
				<label>moderate</label>
				<statOffsets>
                    <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">1</VacuumResistance>
					<ComfyTemperatureMin>-35</ComfyTemperatureMin>
					<ComfyTemperatureMax>30</ComfyTemperatureMax>
				</statOffsets>
			</li>

			<li>
				<minSeverity>0.5</minSeverity>
				<label>significant</label>
				<statOffsets>
                    <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">1</VacuumResistance>
					<ComfyTemperatureMin>-35</ComfyTemperatureMin>
					<ComfyTemperatureMax>30</ComfyTemperatureMax>
				</statOffsets>
			</li>

			<li>
				<minSeverity>0.8</minSeverity>
				<label>peak</label>
				<statOffsets>
                    <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">1</VacuumResistance>
					<ComfyTemperatureMin>-35</ComfyTemperatureMin>
					<ComfyTemperatureMax>30</ComfyTemperatureMax>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

</Defs>

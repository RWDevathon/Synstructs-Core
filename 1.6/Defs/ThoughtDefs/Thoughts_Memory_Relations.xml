<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Creator thoughts -->

    <ThoughtDef>
        <defName>ABF_Thought_Synstruct_CreatorDied</defName>
        <durationDays>30</durationDays>
        <showBubble>true</showBubble>
        <stages>
            <li>
                <label>my creator {0} died</label>
                <description>My creator died. I must decide the legacy they leave behind...</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ABF_Thought_Synstruct_KilledMyCreator</defName>
        <thoughtClass>Thought_MemorySocial</thoughtClass>
        <durationDays>120</durationDays>
        <stackLimit>300</stackLimit>
        <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
        <stages>
            <li>
                <label>killed my creator</label>
                <baseOpinionOffset>-80</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ABF_Thought_Synstruct_MyCreatorLost</defName>
        <durationDays>30.0</durationDays>
        <showBubble>true</showBubble>
        <stages>
            <li>
                <label>my creator {0} lost</label>
                <description>My creator has been lost. I hope for their safe return.</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>


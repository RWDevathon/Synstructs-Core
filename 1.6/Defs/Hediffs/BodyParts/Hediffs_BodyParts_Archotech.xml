    <HediffDef Name="ABF_Hediff_Synstruct_Archotech_AddedBodyPartBase" ParentName="ABF_Hediff_Synstruct_AddedBodyPartBase" Abstract="True">
        <addedPartProps>
            <solid>true</solid>

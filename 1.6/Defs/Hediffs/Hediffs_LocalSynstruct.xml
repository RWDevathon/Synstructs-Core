        <defaultLabelColor>(0.8, 0.8, 0.8)</defaultLabelColor>
        <maxSeverity>10</maxSeverity>
        <scenarioCanAdd>false</scenarioCanAdd>
        <isBad>false</isBad>
        <levelIsQuantity>true</levelIsQuantity>
        <stages>
            <li>
                <minSeverity>1</minSeverity>

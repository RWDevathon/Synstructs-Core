<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <HediffDef>
        <defName>ABF_Hediff_Synstruct_CoolantShortage</defName>
        <label>coolant shortage</label>
        <description>This unit has insufficient coolant to fully fill its coolant lines and is shutting down to avoid catastrophic failure.\nCoolant reserves must be refilled to ensure a return to proper functionality.</description>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.8</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.25</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.6</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>severe</label>
                <minSeverity>0.5</minSeverity>
                <hungerRateFactor>0.8</hungerRateFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.4</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.75</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <hungerRateFactor>0.25</hungerRateFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>ABF_Hediff_Synstruct_LubricantShortage</defName>
        <label>lubricant shortage</label>
        <description>This unit has insufficient lubricant to maintain smooth part functionality, reducing exterior part efficiency and increasing the loss of coherence.\nLubricant reserves must be refilled to ensure a return to proper functionality.</description>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.90</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.25</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.80</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
            <li>
                <label>severe</label>
                <minSeverity>0.5</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.85</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.85</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.70</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.75</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.60</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <HediffDef>
        <defName>ABF_Hediff_Synstruct_EnergyShortage</defName>
        <label>energy shortage</label>
        <description>This unit has insufficient energy to remain functional and is on emergency power. Restoring power is required to reactivate it.</description>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <label>reserve power</label>
                <lifeThreatening>true</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.6</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <label>depleted energy</label>
                <minSeverity>0.95</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>ABF_Hediff_Synstruct_ComponentShortage</defName>
        <label>component shortage</label>
        <description>This unit has insufficient components to maintain smooth part functionality, resulting in a reduced ability to self-repair and to operate.\nComponent reserves must be restored to ensure a return to proper functionality.</description>
        <maxSeverity>1</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <naturalHealingFactor>0.95</naturalHealingFactor>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.90</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.25</minSeverity>
                <naturalHealingFactor>0.9</naturalHealingFactor>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.80</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
            <li>
                <label>severe</label>
                <minSeverity>0.5</minSeverity>
                <naturalHealingFactor>0.85</naturalHealingFactor>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.85</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.85</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.70</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.75</minSeverity>
                <naturalHealingFactor>0.8</naturalHealingFactor>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                </capMods>
		        <statFactors>
                    <ABF_Stat_Synstruct_CoherenceRetention>0.60</ABF_Stat_Synstruct_CoherenceRetention>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>

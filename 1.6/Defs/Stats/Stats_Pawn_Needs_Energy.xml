<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Max Energy -->
    <StatDef>
        <defName>ABF_Stat_Synstruct_MaxEnergy</defName>
        <label>max energy</label>
        <description>How much energy this unit can store. This stat directly affects how long a unit can go between charges and how long it takes to reach full charge. It is primarily affected by the unit's battery.</description>
        <category>PawnFood</category>
        <defaultBaseValue>1</defaultBaseValue>
        <hideAtValue>1</hideAtValue>
        <toStringStyle>FloatMaxTwo</toStringStyle>
        <minValue>1</minValue>
        <displayPriorityInCategory>2503</displayPriorityInCategory>
    </StatDef>

    <!-- Energy Consumption -->
    <StatDef>
        <defName>ABF_Stat_Synstruct_EnergyConsumption</defName>
        <label>energy consumption</label>
        <description>How much energy this unit uses up per day, as of this moment.</description>
        <category>PawnFood</category>
        <defaultBaseValue>0</defaultBaseValue>
        <hideAtValue>0</hideAtValue>
        <toStringStyle>FloatMaxTwo</toStringStyle>
        <minValue>0</minValue>
        <displayPriorityInCategory>2502</displayPriorityInCategory>
    </StatDef>

</Defs>